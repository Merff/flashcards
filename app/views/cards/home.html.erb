<% if @card %>

  <%= @card.translated %>
  <%= form_tag search_path do %>
    <%= hidden_field_tag(:card_id, @card.id) %>
    <%= label_tag       "перевод:"  %>
    <%= text_field_tag  :answer     %>
    <%= submit_tag      "Проверить" %>
    <%= image_tag @card.avatar_url  %>
  <% end %>
<% end %>

