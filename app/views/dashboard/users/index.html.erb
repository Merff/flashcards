<table class="table table-striped table-condensed">
  <tr>
    <th>Email</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= link_to t('edit'), edit_user_path(user) %></td>
      <td><%= link_to t('delete'), user, method: :delete, data:
                                   { confirm: 'sure?' } %></td>
    </tr>
  <% end %>
</table>

