<%= simple_form_for @card do |f| %>
  <%= f.input :original,   label: t('original_text') %>
  <%= f.input :translated, label: t('translated_text') %>
  <%= f.association :deck, collection: current_user.decks, label: t('deck') %>
  <%= image_tag @card.avatar_url(:thumb) if @card.avatar? %>
  <%= f.input  :avatar, label: t('avatar') %>
  <%= f.input  :remove_avatar, as: :boolean if @card.avatar? %>
  <%= f.button :submit, t('create_card'), class: "btn btn-warning" %>
<% end %>