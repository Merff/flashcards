<!DOCTYPE html>
<html>

<head>
  <title>Флэшкарточкер</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <section id="container">

    <header class="clearfix">
      <h1>Флэшкарточкер</h1>
      <ul class="navigation-links">
        <li><%= link_to 'Все карточки',      cards_path    %></li>
        <li><%= link_to 'Все колоды',        decks_path    %></li>
        <li><%= link_to 'Добавить карточку', new_card_path %></li>
        <li><%= link_to 'Добавить колоду',   new_deck_path %></li>
        <li><%= link_to 'Тренировщик',       root_path     %></li>
      </ul>
    </header>

    <div>
      <% if current_user %>
        <%= link_to "Редактировать профиль", edit_user_path(current_user.id) %>
        <%= link_to "Выйти", :logout, method: :post %>
      <% else %>
        <%= link_to "Регистрация", new_user_path %> 
        <%= link_to "Войти", :login %>
        <%= link_to 'Login with Github', auth_at_provider_path(:provider => :github) %>
      <% end %>
    </div>
    <div>
    <p><%= flash[:notice] %></p>
    <p><%= flash[:alert]  %></p>
    </div>

    <section>
      <%= yield %>
    </section>

  </section>
</body>

</html>
