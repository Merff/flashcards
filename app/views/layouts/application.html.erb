<!DOCTYPE html>
<html>

<head>
  <title><%= t :flashcards %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>

  <div class="container">
    <div class="page-header">
      <nav>
        <ul class="nav nav-pills pull-right">
          <% if current_user %>
            <li role="presentation"><%= link_to t('edit_profile'), edit_user_path(current_user.id) %></li>
            <li role="presentation"><%= link_to t('sign_out'), :logout, method: :post %></li>
          <% else %>
            <li role="presentation"><%= link_to 'en', login_path(locale: 'en') %></li>
            <li role="presentation"><%= link_to 'ru', login_path(locale: 'ru') %></li>
            <li role="presentation"><%= link_to t('sign_up'), new_user_path %></li>
            <li role="presentation"><%= link_to t('sign_in'), :login %></li>
            <li role="presentation"><%= link_to t('sign_in_with_Github'), auth_at_provider_path(:provider => :github) %></li>
          <% end %>
        </ul>
      </nav>
      <h2><%= t :flashcards %></h2>
    </div>

    <div class="row">
      <div class="col-lg-2">
        <ul>
          <li><%= link_to t('listing_cards'), cards_path  %></li>
          <li><%= link_to t('listing_decks'), decks_path  %></li>
        </ul>
      </div>
      <div class="col-lg-6">
        <ul>
          <li><%= link_to t('create_card'), new_card_path %></li>
          <li><%= link_to t('create_deck'), new_deck_path %></li>
        </ul>
      </div>
    </div>
    
    <h3 class="text-center"><%= link_to t('train'), root_path %></h3>

    <p class="text-center bg-success"><%= flash[:notice] %></p>
    <p class="text-center bg-warning"><%= flash[:alert] %></p>

    <div class="jumbotron">
      <div class="container">
        <%= yield %>
      </div>
    </div>

  </div>

  <footer class="footer">
    <div class="container">
      <p class="text-muted">Made by Merff</p>
    </div>
  </footer>

</body>
</html>
